@model DeTaiWeb_ShopThoiTrang.Models.KhachHang

@{
    ViewBag.Title = "XoaNguoiDung";
    Layout = "~/Views/Shared/LayoutQuanLy.cshtml";
}

<h3>Bạn có chắc muốn xóa người dùng này?</h3>
<fieldset>
    <legend>Thông tin người dùng</legend>
    
    <div class="row mt-3">
        <div class="col-md-2">
            <div class="display-label">
                 <p>Tên người dùng:</p>
            </div>
        </div>
        <div class="col-md-10">
            <div class="display-field">
                @Html.DisplayFor(model => model.TenKhachHang)
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-2">
            <div class="display-label">
                 <p>Tên tài khoản:</p>
            </div>
        </div>
        <div class="col-md-10">
            <div class="display-field">
                @Html.DisplayFor(model => model.TenTaiKhoan)
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-2">
            <div class="display-label">
                 <p>Địa chỉ:</p>
            </div>
        </div>
        <div class="col-md-10">
            <div class="display-field">
                @Html.DisplayFor(model => model.DiaChi)
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-2">
            <div class="display-label">
                 <p>Số điện thoại:</p>
            </div>
        </div>
        <div class="col-md-10">
            <div class="display-field">
                @Html.DisplayFor(model => model.SDT)
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-2">
            <div class="display-label">
                 <p>Loại người dùng:</p>
            </div>
        </div>
        <div class="col-md-10">
            <div class="display-field">
                @Html.DisplayFor(model => model.MaLTK) ( 1: Admin - 2: Khách hàng )
            </div>
        </div>
    </div>

    <div class="row mt-3">
        @using (Html.BeginForm()) {
            <input class="btn btn-dark" style="width:400px;" type="submit" value="XÓA" />
        }
    </div>

    <div class="row mt-3">
        <a href="@Url.Action("DanhSachKhachHang", "Admin")">
            <input class="btn btn-dark", style="width:400px;" type="button" value="TRỞ VỀ" />
        </a>
    </div>
</fieldset>