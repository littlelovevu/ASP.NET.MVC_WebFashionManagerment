@using DeTaiWeb_ShopThoiTrang.Models;
@model SanPham
@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Shared/LayoutQuanLy.cshtml";
}

<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-md-2">
            <img style="width:100px; height:150px;" src="~/Content/Images/@Model.DanhSachHinh" />
        </div>
        <div class="col-md-5">
            <img style="width:330px; height:500px;" src="~/Content/Images/@Model.HinhMinhHoa" />
        </div>
        <div class="col-md-5">
            <div class="row">
                <h3>@Model.TenSanPham</h3>
            </div>
            <div class="row mt-3">
                <h4>@String.Format("{0:#,###}", @Model.Gia) ₫</h4>
            </div>
            <div class="row mt-3 text-center" style="border-top:1px solid black; border-bottom:1px solid black;">
                <div class="col-md text-center mt-2" style="height:40px;">
                    Mã sản phẩm: SP-@Model.MaSanPham
                </div>
            </div>
            <div class="row mt-3">
                <a href="@Url.Action("SuaSanPham","Admin", new { @id = Model.MaSanPham})">
                    <input class="btn", style="width:360px; height:50px; font-size:18px; background-color:green; color:white;"} type="button" value="SỬA CHI TIẾT" />
                </a>
            </div>
            <div class="row mt-3">
                <a href="@Url.Action("XoaSanPham","Admin", new { @id = Model.MaSanPham})">
                    <input class="btn", style="width:360px; height:50px; font-size:18px; background-color:red; color:white;"} type="button" value="XÓA SẢN PHẨM" />
                </a>
            </div>
            <div class="row mt-3">
                <a href="@Url.Action("DanhSachSanPham","Admin")">
                    <input class="btn btn-dark", style="width:360px; height:50px; font-size:18px;"} type="button" value="TRỞ VỀ" />
                </a>
            </div>
        </div>
    </div>
</div>
