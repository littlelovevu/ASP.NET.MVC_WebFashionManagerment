@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/LayoutQuanLy.cshtml";
}

<div class="row text-center">
    <form action="/Admin/DangNhap" method="post" style="margin-left:200px;">
        <h3>ĐĂNG NHẬP</h3>
        <input type="text" name="txtTaiKhoan" placeholder="Tài khoản" />
        <p></p>
        <input type="password" name="txtMatKhau" placeholder="Mật khẩu" />
        <p></p>
        <input type="submit" value="Đăng nhập" class="btn btn-dark" style="width:190px;" />
    </form>
</div>
<div class="row mt-3" style="margin-left:185px;">
    <a href="@Url.Action("Index","Home")" style="color:black; text-decoration:none;">
        <input type="button" value="Trở về" class="btn btn-success" style="width:190px;" />
    </a>
</div>
@if (Request.HttpMethod == "POST")
{
    if (ViewBag.tb != null)
    {
        <p class="mt-4" style="margin-left:190px; color:red;">@ViewBag.tb</p>
    }
}
