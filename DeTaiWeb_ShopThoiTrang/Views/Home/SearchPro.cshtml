@{
    ViewBag.Title = "SearchPro";
    Layout = "~/Views/Shared/LayoutKhachHang.cshtml";
}

<form action="/Home/SearchPro" method="post">
    <div style ="margin-left:200px; margin-top:50px;">
        <h3>Tìm kiếm nâng cao</h3>
        Bạn cần từ khóa: <input type="text" name="txtTen" placeholder="Tên sản phẩm..."/>
        <br /><br />
        Nhà sản xuất:@Html.DropDownList("MaNhaSanXuat")
        <br /><br />
        Vui lòng chọn giá tiền bạn muốn:
        <br /><br />
        <input type="checkbox" name="g1" value="1" /> 0 - 100.000 VND<br />
        <input type="checkbox" name="g2" value="2" /> 101.000 - 200.000 VND<br />
        <input type="checkbox" name="g3" value="3" /> 201.000 - 400.000 VND<br />
        <input type="checkbox" name="g4" value="4" /> lớn hơn 400.000 VND<br />
        <input class="mt-3 ml-5" style="background-color:orange; color:white;" type="submit" value="Tìm kiếm" />
    </div>
</form>