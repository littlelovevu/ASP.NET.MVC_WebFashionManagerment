@using DeTaiWeb_ShopThoiTrang.Models;
@model SanPham
@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Views/Shared/LayoutKhachHang.cshtml";
}

<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-md-2">
            <img style="width:100px; height:150px;" src="~/Content/Images/@Model.DanhSachHinh" />
        </div>
        <div class="col-md-3">
            <img style="width:330px; height:500px;" src="~/Content/Images/@Model.HinhMinhHoa" />
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-5">
            <div class="row">
                <h3>@Model.TenSanPham</h3>
            </div>
            <div class="row mt-3">
                <h4>@String.Format("{0:#,###}", @Model.Gia) ₫</h4>
            </div>
            <div class="row mt-3">
                @*<a href="@Url.Action("ThemGioHang", "DatHang", new { @msp = Model.MaSanPham, @strURL= Request.Url.ToString()})">*@
                <a href="@Url.Action("ThemGioHang", "DatHang", new { @msp = Model.MaSanPham})">
                    <input class="btn btn-dark", style="width:100%; height:50px; font-size:18px;"} type="button" value="THÊM VÀO GIỎ" />
                </a>
                <a href="@Url.Action("Index","Home")">
                    <input class="btn btn-dark ml-5", style="width:100%; height:50px; font-size:18px;"} type="button" value="MUA TIẾP" />
                </a>
            </div>
            <div class="row mt-3 text-center" style="border-top:1px solid black; border-bottom:1px solid black;">
                <div class="col-md text-center mt-2" style="height:40px;">
                    Mã sản phẩm: SP-@Model.MaSanPham
                </div>
            </div>
            <div class="row mt-5 text-center">
                <div class="col-md text-left mt-2">
                    <h5 style="color:red;">GỌI ĐỂ MUA HÀNG NHANH HƠN</h5>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-4 text-left mt-1">
                    <h4>0366.396.605</h4>
                </div>
                <div class="col-md-8 text-left mt-2">
                    <p>(8h30 : 21h30)</p>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md text-left mt-2">
                    <h5 style="color:red;">GIAO HÀNG TỪ 1-5 NGÀY</h5>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-1 text-left mt-1">
                    <img src="~/Content/Images/iconGiaoHang.jpg" />
                </div>
                <div class="col-md-11 text-left mt-1">
                    <p>Giao hàng miễn phí(Đơn hàng trên 700K)</p>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-1 text-left mt-1">
                    <img src="~/Content/Images/iconThanhToan.jpg" />
                </div>
                <div class="col-md-11 text-left mt-1">
                    <p>Thanh toán(Thanh toán khi nhận hàng)</p>
                </div>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>
